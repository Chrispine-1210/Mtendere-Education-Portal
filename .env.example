# Database Configuration
DATABASE_URL=sqlite:///./mtendere_admin.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/mtendere_admin

# PostgreSQL specific (alternative to DATABASE_URL)
PGHOST=localhost
PGDATABASE=mtendere_admin
PGUSER=postgres
PGPASSWORD=your_password
PGPORT=5432

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email Configuration (Gmail SMTP)
SMTP_USERNAME=mtendereeduconsult@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Admin Configuration
ADMIN_EMAIL=mtendereeduconsult@gmail.com

# Application Settings
DEBUG=false
ENVIRONMENT=production

# CORS (for production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=10485760
